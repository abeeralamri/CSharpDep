@model Hobby
<p><a href="/Dashboard">Dashboard</a> | <a href="/logout">Logout</a></p>

    <div style=" display: flex; justify-content: space-evenly;" >
    <div >
        <h1>Create a Hobby</h1>
        <form asp-action="Create" asp-controller="Hobby" method="post">
            <div class="form-group">
                <p><span style="color: red;" asp-validation-for="Name"></span></p>
                <label asp-for="Name">Name</label>
                <input asp-for="Name" type="text" class="form-control"/>
            </div>
            <div class="form-group">
                <p><span style="color: red;" asp-validation-for="Description"></span></p>
                <label asp-for="Description">Description</label>
                <textarea name="Description" asp-for = "Description" cols="10" rows="5" class="form-control"></textarea>
            </div>
            
            <button class="btn btn-primary">Create</button>
        </form>
    </div>
    </div>